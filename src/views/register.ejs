<%- include('includes/nav') %>

<div class="container">
  <div class="register-container">
    
    <%- include('includes/messages') %>

      <h3>Register</h3>

      <form action="/register" method="POST" class="form">

        <input type="hidden" name="_csrf" value=<%= csrfToken %>>

        <label for="name">Name</label>
        <input type="text" name="name" class="form-field" placeholder="John Doe">

        <label for="email">Email</label>
        <input type="email" name="email" class="form-field" placeholder="email@example.com">

        <label for="password">Password</label>
        <input type="password" name="password" class="form-field" placeholder="4 to 15 digits">

        <input type="submit" value="Create account" class="submit">

      </form>
  </div>
</div>

<script src="./assets/js/bundle.js"></script>